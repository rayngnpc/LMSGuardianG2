# LMS Guardian Environment Configuration
# Copy this file to .env and update with your actual credentials

# Moodle LMS Credentials
MOODLE_USERNAME=your_moodle_username
MOODLE_PASSWORD=your_moodle_password

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/lmsguardian

# API Keys
GOOGLE_SAFE_KEY=your_google_safe_browsing_api_key

# Email Configuration (for reports)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_app_password

# LMS Guardian Configuration
# Scraping Configuration
SCRAPE_ALL_COURSES=true
SINGLE_COURSE_MODULE_ID=2

# Auto-Discovery Configuration
AUTO_DISCOVER_COURSES=false  # Set to true to automatically create modules for new courses

# Browser Configuration  
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=60000

# Crawler Configuration
CRAWLER_DELAY_SECONDS=0.5
MAX_PAGES_PER_SESSION=100

# Report Configuration
GENERATE_REPORTS=true
SEND_EMAIL_REPORTS=true

# Debug Configuration
DEBUG_MODE=false
SAVE_SCREENSHOTS=true

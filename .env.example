# LMS Guardian Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/lmsguardian

# Moodle Credentials
MOODLE_USERNAME=your_moodle_username
MOODLE_PASSWORD=your_moodle_password

# API Keys
GOOGLE_SAFE_KEY=your_google_safe_browsing_api_key
VT_API_KEY=your_virustotal_api_key
IPQUALITYSCORE_API_KEY=your_ipqualityscore_api_key

# Email Configuration
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# JigsawStack Configuration
JIGSAWSTACK_API_KEY=your_jigsawstack_api_key
JIGSAWSTACK_STORE_ID=your_jigsawstack_store_id

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000

# Security Settings
SECRET_KEY=your_secret_key_here
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=lms_guardian.log

# Report Settings
REPORT_OUTPUT_DIR=./reports/
REPORT_TEMPLATE_DIR=./templates/

# Scraper Settings
SCRAPER_DELAY=1
SCRAPER_TIMEOUT=30
SCRAPER_USER_AGENT=LMS-Guardian/1.0

# Content Filter Settings
CONTENT_FILTER_ENABLED=True
CONTENT_FILTER_STRICT_MODE=False

# Local Repository Settings
LOCALREPO_PATH=./localrepo/
LOCALREPO_ENABLED=True
LOCALREPO_MAX_SIZE=1GB
